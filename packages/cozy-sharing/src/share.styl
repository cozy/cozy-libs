@require 'components/forms.styl'
@require 'components/popover.styl'
@require 'settings/breakpoints.styl'
@require 'settings/palette.styl'

.share-byemail-onlybylink
    background var(--paleGrey)
    padding 1rem 2rem
    margin -1.5rem -2rem 1rem

    +small-screen()
        padding 1rem
        margin -1.5rem -1rem 1rem

.share-modal-content
    @extend $form
    @extend $form-text
    @extend $form-button
    min-height: rem(250)

    .coz-form-group
        flex-shrink 0

    .coz-form-label
        padding-top 0
        margin-top  0

.aligned-dropdown-button
  margin-right: -1rem

.coz-form-group
    margin 0

    h3
        margin .3rem 0 0

    h4
        margin 0 0 .3rem 0

    .coz-form
        margin 0

    .coz-form-desc
        color var(--coolGrey)

.share-type-control
    display flex
    flex-direction row
    justify-content space-between
    padding .5rem 0 0

    .select-wrapper
        flex 0 0 49%
        position relative

        .select-option
            padding .5rem 1.5rem .5rem 3rem
            position relative

            svg
                position absolute
                left 1rem
                top 1rem


        .select-option-label
            line-height 2

        .select-option-desc
            line-height 1.5
            font-size   .8125rem
            color var(--coolGrey)



    button
        flex 0 0 49%
        margin 0

:global
    // dirty hack for react-select: its API doesn't allow to make change to active styles
    .react-select__option:active
        background-color var(--paleGrey) !important

    @media (max-width 32em)
        .react-select__menu
            width 100% !important

@media (max-width 32em)
    .share-type-control
        flex-direction column

        .select-wrapper
            margin-bottom .5rem

input[type=text]
    width 100%

.share-details-created
.share-details-perm
    font-size            1rem
    margin               0.5rem 0 0.5rem 3.5rem
    padding-left         1.5rem
    background-position  0 center
    background-repeat    no-repeat

.share-details-created
    background-image     embedurl('../assets/icons/icon-calendar-16.svg')

.share-details-perm
    background-image     embedurl('../assets/icons/icon-pen-16.svg')
    margin-bottom .2rem

.share-details-perm-desc
    font-size     .875rem
    margin        0 0 0.5rem 3.5rem
    padding-left  1.5rem
    line-height   1.5
    color         var(--coolGrey)
