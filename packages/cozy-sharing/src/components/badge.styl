palette=json('settings/palette.json', { hash: true })

.shared-badge
    display flex
    align-items center
    justify-content center
    border-radius 50%
    background-clip padding-box

    &.--small
        border .125rem solid 
        border-color: palette['white']
        width 1.5rem
        height 1.5rem

        .shared-badge-icon
            width .75rem
            height .75rem

    &.--xsmall
        border .0625rem solid 
        border-color: palette['white']
        width .75rem
        height .75rem

        .shared-badge-icon
            width .375rem
            height .375rem

    &.--by-me
        background-color: palette['emerald']

    &.--with-me
        background-color: palette['portage']
