{
  "name": "renovate-config-cozy",
  "version": "0.10.1",
  "description": "Renovate config for Cozy (Cozy Cloud)",
  "renovate-config": {
    "default": {
      "extends": [
        "config:base",
        ":semanticCommitTypeAll(fix)"
      ],
      "rangeStrategy": "pin",
      "packageRules": [
        {
          "excludePackagePrefixes": [
            "cozy-"
          ],
          "extends": [
            "schedule:monthly"
          ],
          "rangeStrategy": "pin"
        },
        {
          "matchPackageNames": [
            "cozy-client",
            "cozy-stack-client",
            "cozy-pouch-link"
          ],
          "schedule": [
            "on saturday"
          ],
          "groupName": "Cozy Client Packages",
          "rangeStrategy": "bump"
        },
        {
          "matchPackagePrefixes": [
            "cozy-"
          ],
          "schedule": [
            "on saturday"
          ],
          "rangeStrategy": "bump"
        }
      ],
      "timezone": "Europe/Paris",
      "addLabels": [
        "dependencies"
      ],
      "prHourlyLimit": 1,
      "updateNotScheduled": false
    }
  },
  "license": "MIT"
}
