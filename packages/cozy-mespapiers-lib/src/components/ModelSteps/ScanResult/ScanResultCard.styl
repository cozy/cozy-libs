.image-container
  width 100%
  padding-top 100%
  position relative

.image-container:before
  content ""
  display block
  margin-top -100%

.image-container
  display flex
  flex-direction column
  align-items center
  justify-content center

  & > img
    position absolute
    top 0
    left 0
    width 100%
    height 100%
