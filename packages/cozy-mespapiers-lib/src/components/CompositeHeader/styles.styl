@require 'components/table.styl'

.composite-header-container
    margin 2rem 0 1rem
    display flex
    flex-direction column
    height 100%
    justify-content center
    max-width 100%
    text-align center

    img
        width: 'fit-content'
        margin: 0 auto

    &.is-focused
        height initial

.composite-header-img--small
    height rem(64)

.composite-header-img--medium
    height rem(96)

.composite-header-img--large
    height rem(128)
