{
  "name": "renovate-config-cozy-app",
  "version": "0.3.0",
  "description": "Renovate config for Cozy Application (Cozy Cloud)",
  "renovate-config": {
    "default": {
      "extends": [
        "config:base"
      ],
      "rangeStrategy": "pin",
      "packageRules": [
        {
          "excludePackageNames": [
            "^cozy-"
          ],
          "schedule": "before 5am"
        }
      ],
      "timezone": "Europe/Paris",
      "schedule": ["after 9pm and before 6am on every weekday", "every weekend"],
      "updateNotScheduled": false
    }
  },
  "license": "MIT"
}
