{
  "name": "cozy-viewer",
  "version": "5.1.0",
  "description": "Cozy-Viewer provides a component to show files in a viewer.",
  "main": "dist/index.js",
  "license": "MIT",
  "homepage": "https://github.com/cozy/cozy-libs/blob/master/packages/cozy-scanner/README.md",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cozy/cozy-libs.git"
  },
  "bugs": {
    "url": "https://github.com/cozy/cozy-libs/issues"
  },
  "scripts": {
    "build": "rm -rf ./dist && tsc -p tsconfig-build.json && env BABEL_ENV=transpilation babel --extensions .ts,.tsx,.js,.jsx,.md,.styl,.json,.snap ./src -d ./dist --copy-files --no-copy-ignored --verbose",
    "start": "yarn build --watch",
    "prepublishOnly": "yarn build",
    "test": "env NODE_ENV=test jest",
    "lint": "cd .. && yarn eslint --ext js,jsx packages/cozy-viewer"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "11.2.7",
    "@testing-library/react-hooks": "^3.2.1",
    "babel-plugin-inline-json-import": "0.3.2",
    "babel-preset-cozy-app": "^2.8.1",
    "cozy-client": "50.0.0",
    "cozy-device-helper": "2.0.0",
    "cozy-harvest-lib": "^30.8.3",
    "cozy-intent": "^2.29.1",
    "cozy-logger": "^1.16.1",
    "cozy-sharing": "14.1.0",
    "cozy-ui": "^113.7.0",
    "enzyme": "3.11.0",
    "enzyme-adapter-react-16": "1.15.6",
    "enzyme-to-json": "3.6.2",
    "identity-obj-proxy": "3.0.0",
    "jest-canvas-mock": "2.3.1",
    "prop-types": "15.8.1",
    "react-dom": "16.12.0",
    "react-test-renderer": "16.12.0",
    "stylus": "0.63.0"
  },
  "dependencies": {
    "classnames": "^2.2.5",
    "hammerjs": "^2.0.8",
    "lodash": "4.17.21",
    "react-markdown": "^4.0.8",
    "react-pdf": "^5.7.2"
  },
  "peerDependencies": {
    "cozy-client": ">=50.0.0",
    "cozy-device-helper": ">=2.0.0",
    "cozy-harvest-lib": ">=30.8.0",
    "cozy-intent": ">=2.26.0",
    "cozy-logger": ">=1.9.0",
    "cozy-sharing": ">=14.1.0",
    "cozy-ui": ">=113.7.0",
    "react": ">=16.12.0",
    "react-dom": ">=16.12.0"
  }
}
