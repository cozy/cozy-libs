.conversationLayout
  height 100vh
  width 100vw

  display: flex
  align-items: center
  justify-content: center
  flex-direction: row
  overflow: hidden

.conversationWindowContainer
  flex 1
  height 100vh
  display: flex
  align-items: center
  justify-content: center

.conversationWindow
  width calc(100% - 40px)
  max-width 1000px
  height calc(100% - 40px)
  padding: 20px

.conversationContainer 
  height 1px
  opacity 0
  overflow: visible
  width 100%
  transition height 0.6s, opacity 0.2s 0.3s
  transition-timing-function: cubic-bezier(0.31, 0.1, 0, 1.06)

.conversationContainer--started
  height: 100%
  opacity 1

.conversationHistory
  width 236px
  height 100vh
  border-right-color: var(--borderMainColor)
  border-right-style: solid
  border-right-width: 1px